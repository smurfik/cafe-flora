<!DOCTYPE html>
<html>
<head>
  <title>Cafe Flora</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="<%= @header %>">
    <div>
      <%= link_to image_tag("logo.png", :class => "logo"), all_menus_path %>
    </div>
    <div class="title">
       Cafe Flora Menu Planner
    </div>
    <div class="links">
      <% @menus.each do |m| %>
        <span class="header-menu-name"><%= link_to m.name, show_menu_path(m.id)%></span>
      <% end  %>
    </div>
  </div>

  <div class= "<%= @page_content %>" >
    <%= yield %>
  </div>

  <div class=" <%= @footer %>">
    <%= yield :footer %>
  </div>
</body>
</html>
